{% extends 'blog/blog.html.twig' %}
{% block content_blog %}

    {% for msg in app.session.flashBag.get('info') %}
        <p>{{ msg }}</p></br>
    {% endfor %}

{% if(article|length > 0) %}
    <ul>
        {% for article in article %}
        {% set id = article.id %}
            <li><a href="{{ url('app_blog_article', {'id': id}) }}">{{ article.title }} </a> : {{ article.content | truncate(20)}}</li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}