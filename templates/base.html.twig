                <li><a href="{{ url('app_blog_change_locale', {'lang' : 'fr', 'route': 'app_blog_index'}) }}" > fr </a></li>
        {% endblock %}

        {% block content %}
            <a>blablablablablablablablablablablablablabla</a>
        {% endblock %}

        {{ render(controller(
            'App\\Controller\\BlogController::leftMenu'
        )) }}

    </body>
</html>